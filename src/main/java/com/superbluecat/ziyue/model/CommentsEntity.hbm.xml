<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.superbluecat.ziyue.model.CommentsEntity" table="comments" schema="zy">
        <id name="commentId" column="CommentId"/>
        <property name="nickname" column="Nickname"/>
        <property name="email" column="Email"/>
        <property name="website" column="Website"/>
        <property name="comment" column="Comment"/>
        <property name="ua" column="Ua"/>
        <property name="time" column="Time"/>
        <property name="userId" column="UserId"/>
        <property name="toCommentId" column="ToCommentId"/>
    </class>
</hibernate-mapping>